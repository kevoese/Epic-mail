{
  "name": "epic-mail",
  "version": "1.0.0",
  "description": "This is a web application that allows users to communicate by sending mails to one another",
  "main": "index.js",
  "scripts": {
    "start": "node dist/app.js",
    "startdev": "nodemon --exec babel-node Server/app.js",
    "test": "cross-env NODE_ENV=test nyc --require @babel/register mocha Server/test --exit",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "build": "rimraf dist/ && babel ./Server -d dist"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/amoskeyz/Epic-mail.git"
  },
  "keywords": [
    "Heroku",
    "travis",
    "html",
    "js",
    "css"
  ],
  "author": "Amos Oruaroghene",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/amoskeyz/Epic-mail/issues"
  },
  "homepage": "https://github.com/amoskeyz/Epic-mail#readme",
  "dependencies": {
    "@babel/runtime": "^7.3.4",
    "body-parser": "^1.18.3",
    "express": "^4.16.4",
    "joi": "^14.3.1",
    "mocha": "^6.0.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.4",
    "@babel/node": "^7.2.2",
    "@babel/preset-env": "^7.3.4",
    "coveralls": "^3.0.3",
    "cross-env": "^5.2.0",
    "eslint": "^5.15.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.18.10",
    "nyc": "^13.3.0"
  },
  "nyc": {
    "require": [
      "babel-register"
    ],
    "reporter": [
      "lcov",
      "text"
    ]
  }
}